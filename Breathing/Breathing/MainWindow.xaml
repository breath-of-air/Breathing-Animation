                                </DoubleAnimationUsingKeyFrames>

                                <DoubleAnimationUsingKeyFrames
                                    Storyboard.TargetName="trScale4"
                                    Storyboard.TargetProperty="ScaleX"
                                    Duration="0:0:4.2">

                                    <LinearDoubleKeyFrame Value="1" KeyTime="0:0:0" />
                                    <LinearDoubleKeyFrame Value="0.15" KeyTime="0:0:4" />

                                </DoubleAnimationUsingKeyFrames>

                                <DoubleAnimationUsingKeyFrames
                                    Storyboard.TargetName="trScale4"
                                    Storyboard.TargetProperty="ScaleY"
                                    Duration="0:0:4.2">

                                    <LinearDoubleKeyFrame Value="1" KeyTime="0:0:0" />
                                    <LinearDoubleKeyFrame Value="0.15" KeyTime="0:0:4" />

                                </DoubleAnimationUsingKeyFrames>

                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Ellipse.Triggers>

            </Ellipse>

            <Ellipse x:Name="eFive"
                Width="125"
                Height="125"
                Fill="Cyan"
                Opacity="0.75" 
                RenderTransformOrigin="0.5,0.5"
                >
                <Ellipse.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform x:Name="trScale5"/>
                        <SkewTransform/>
                        <RotateTransform x:Name="trRotate5"/>
                        <TranslateTransform X="-35" Y="50" x:Name="Five"/>
                    </TransformGroup>
                </Ellipse.RenderTransform>

                <Ellipse.Triggers>
                    <EventTrigger RoutedEvent="Ellipse.Loaded">
                        <BeginStoryboard>
                            <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                                <DoubleAnimationUsingKeyFrames 
                                    
                                    Storyboard.TargetName="Five"
                                    Storyboard.TargetProperty="X"
                                    Duration="0:0:4.2">

                                    <LinearDoubleKeyFrame Value="-35" KeyTime="0:0:0" />
                                    <LinearDoubleKeyFrame Value="0" KeyTime="0:0:4" />

                                </DoubleAnimationUsingKeyFrames>
                                <DoubleAnimationUsingKeyFrames
                                    Storyboard.TargetName="Five"
                                    Storyboard.TargetProperty="Y"
                                    Duration="0:0:4.2">

                                    <LinearDoubleKeyFrame Value="50" KeyTime="0:0:0" />
                                    <LinearDoubleKeyFrame Value="0" KeyTime="0:0:4" />

                                </DoubleAnimationUsingKeyFrames>

                                <DoubleAnimationUsingKeyFrames
                                    Storyboard.TargetName="trScale5"
                                    Storyboard.TargetProperty="ScaleX"
                                    Duration="0:0:4.2">

                                    <LinearDoubleKeyFrame Value="1" KeyTime="0:0:0" />
                                    <LinearDoubleKeyFrame Value="0.15" KeyTime="0:0:4" />

                                </DoubleAnimationUsingKeyFrames>

                                <DoubleAnimationUsingKeyFrames
                                    Storyboard.TargetName="trScale5"
                                    Storyboard.TargetProperty="ScaleY"
                                    Duration="0:0:4.2">

                                    <LinearDoubleKeyFrame Value="1" KeyTime="0:0:0" />
                                    <LinearDoubleKeyFrame Value="0.15" KeyTime="0:0:4" />

                                </DoubleAnimationUsingKeyFrames>

                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Ellipse.Triggers>

            </Ellipse>

            <Ellipse x:Name="eSix"
                Width="125"
                Height="125"
                Fill="Cyan"
                Opacity="0.75" 
                RenderTransformOrigin="0.5,0.5"
                >
                <Ellipse.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform x:Name="trScale6"/>
                        <SkewTransform/>
                        <RotateTransform x:Name="trRotate6"/>
                        <TranslateTransform X="35" Y="50" x:Name="Six"/>
                    </TransformGroup>
                </Ellipse.RenderTransform>

                <Ellipse.Triggers>
                    <EventTrigger RoutedEvent="Ellipse.Loaded">
                        <BeginStoryboard>
                            <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                                <DoubleAnimationUsingKeyFrames 
                                    
                                    Storyboard.TargetName="Six"
                                    Storyboard.TargetProperty="X"
                                    Duration="0:0:4.2">

                                    <LinearDoubleKeyFrame Value="35" KeyTime="0:0:0" />
                                    <LinearDoubleKeyFrame Value="0" KeyTime="0:0:4" />

                                </DoubleAnimationUsingKeyFrames>
                                <DoubleAnimationUsingKeyFrames
                                    Storyboard.TargetName="Six"
                                    Storyboard.TargetProperty="Y"
                                    Duration="0:0:4.2">

                                    <LinearDoubleKeyFrame Value="50" KeyTime="0:0:0" />
                                    <LinearDoubleKeyFrame Value="0" KeyTime="0:0:4" />

                                </DoubleAnimationUsingKeyFrames>

                                <DoubleAnimationUsingKeyFrames
                                    Storyboard.TargetName="trScale6"
                                    Storyboard.TargetProperty="ScaleX"
                                    Duration="0:0:4.2">

                                    <LinearDoubleKeyFrame Value="1" KeyTime="0:0:0" />
                                    <LinearDoubleKeyFrame Value="0.15" KeyTime="0:0:4" />

                                </DoubleAnimationUsingKeyFrames>

                                <DoubleAnimationUsingKeyFrames
                                    Storyboard.TargetName="trScale6"
                                    Storyboard.TargetProperty="ScaleY"
                                    Duration="0:0:4.2">

                                    <LinearDoubleKeyFrame Value="1" KeyTime="0:0:0" />
                                    <LinearDoubleKeyFrame Value="0.15" KeyTime="0:0:4" />

                                </DoubleAnimationUsingKeyFrames>

                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Ellipse.Triggers>

            </Ellipse>

        </Canvas>
    </Grid>
</Window>
